<html>
<head>
<title><%= @user.firstName%> <%= @user.lastName%></title>
<body>

Wishlist of <%= @user.firstName%> <%= @user.lastName%><br>

<table>
<tr>
<td>Item</td>
<td>Cost</td>
<td>Number Wanted</td>
<td>Where Found</td>
<td></td>
</tr>
<% @user.wishes.each do |wish| %>

<tr>
<td><%= wish.itemName %></td>
<td class="numeric"><%= wish.formattedItemPrice  %></td>
<td class="numeric"><%= wish.numberWanted %></td>
<td><%= wish.whereFound %></td>
<td><%= link_to "Choose", :action => "add_purchase",  :id=> @user.id, :wishid=>wish.id %> </td>
</tr>


<% end %>

</table>
</body>
</html>
